<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:id="@+id/contributed_user_cardView">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/id_text_view_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                tools:text="Texte retrouver"/>
        <TextView
                android:id="@+id/id_text_definition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                tools:text="definition:"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_alignParentStart="true"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
        >
            <TextView
                    android:text="Abscisses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_tv_abscisse"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#FF5722"/>
            <TextView
                    android:text="OrdonnÃ©es"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_tv_ordonne"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>